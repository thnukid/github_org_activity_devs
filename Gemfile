source 'https://rubygems.org'

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

# Specify your gem's dependencies in github_org_activity_devs.gemspec
gemspec

gem 'activerecord' # orm
gem 'sqlite3', '~> 1.3', '< 1.4' # as database
gem 'standalone_migrations' # rails like migrations

gem 'dotenv' # .env configuration

gem 'octokit' # github api client
gem 'faraday-manual-cache' # cache middleware for faraday
gem 'activesupport' # File store cache

gem 'time_difference'
gem 'terminal-table'

gem 'pry' # debugger
gem 'rb-readline' # for pry
